#notfound
  .title haiji404
  .subtitle Not Found

script.
  (function() {
    var resizeBanner = function() {
      u('#notfound').attr('style', 'height: ' + window.innerHeight+ 'px;');
    };
    window.onresize = function() {
      if (window.innerWidth < 768) return;
      resizeBanner();
    };
    resizeBanner();
  })();
